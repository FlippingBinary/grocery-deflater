{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es2020",
    "strict": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}